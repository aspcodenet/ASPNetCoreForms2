@page
@model ASPNetCoreEFCoreFacit.Pages.Kurs.NewModel
@{
}


<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Skapa ny kurs</h3>
            </div>

            <div class="card-body">
                <form method="post" enctype="multipart/form-data">


                    <div class="form-group">
                        <label asp-for="Namn">Namn</label>
                        <input class="form-control" asp-for="Namn">
                        <span asp-validation-for="Namn" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Beskrivning">Beskrivning</label>
                        <textarea rows="5" cols="30"
                                  class="form-control" asp-for="Beskrivning"></textarea>
                        <span asp-validation-for="Beskrivning" class="field-validation-error"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="SelectDayOfWeek">Veckodag för föreläsningar</label>

                        <select class="form-control" asp-for="SelectDayOfWeek"
                                asp-items="@Model.AllDayOfWeeks"></select>

                        @*<textarea rows="5" cols="30"
                            class="form-control" asp-for="Manufacturer"></textarea>*@
                        <span asp-validation-for="SelectDayOfWeek" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="StartDay"></label>
                        <input asp-for="StartDay" class="form-control" />
                        <span asp-validation-for="StartDay" class="field-validation-error"></span>
                    </div>

                    
                    <div class="form-group">
                        <label asp-for="Bild">Bild</label>
                        <input asp-for="Bild" class="form-control"/>
                    </div>


                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>

<partial name="_ValidationScriptsPartial" />