@page
@model ASPNetCoreEFCoreFacit.Pages.BilEditModel
@{
}

<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Ändra bil</h3>
            </div>

            <div class="card-body">
                <form method="post">


                    <div class="form-group">
                        <label asp-for="Regno">Regno</label>
                        <input class="form-control" asp-for="Regno">
                        <span asp-validation-for="Regno" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year">Årsmodell</label>
                        <input class="form-control" asp-for="Year">
                        <span asp-validation-for="Year" class="field-validation-error"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="ManufacturerId">Manufacturer</label>

                        <select class="form-control" asp-for="ManufacturerId"
                                asp-items="@Model.AllManufacturers"></select>

                        @*<textarea rows="5" cols="30"
            class="form-control" asp-for="Manufacturer"></textarea>*@
                        <span asp-validation-for="ManufacturerId" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Modell"></label>
                        <input asp-for="Modell" class="form-control" />
                        <span asp-validation-for="Modell" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="field-validation-error"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="HasRadio"></label>
                        <input asp-for="HasRadio" class="form-control" />
                        <span asp-validation-for="HasRadio" class="field-validation-error"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="FirstSalesDate">Dag och tid säljstart</label>
                        <input asp-for="FirstSalesDate" class="form-control" />
                        <span asp-validation-for="FirstSalesDate" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BirthDateForOwner"></label>
                        <input asp-for="BirthDateForOwner" class="form-control" />
                        <span asp-validation-for="BirthDateForOwner" class="field-validation-error"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Bild"></label>
                        <input asp-for="Bild" class="form-control" />
                        <span asp-validation-for="Bild" class="field-validation-error"></span>
                    </div>


                    @*<div class="form-group">
            <label asp-for="Language">Language</label>
            <select class="form-control" asp-for="Language" asp-items="Model.AllLanguages"></select>
            <span asp-validation-for="Language" class="field-validation-error"></span>
        </div>*@




                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>

        </div>

    </div>
</div>

